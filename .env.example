# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/cryptonestle_db?schema=public"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-here
JWT_REFRESH_EXPIRES_IN=30d

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Blockchain Configuration
# Ethereum Mainnet
ETH_RPC_URL=https://mainnet.infura.io/v3/your-infura-project-id
ETH_PRIVATE_KEY=your-private-key-here
ETH_CONTRACT_ADDRESS=0x...

# BSC Mainnet
BSC_RPC_URL=https://bsc-dataseed.binance.org/
BSC_PRIVATE_KEY=your-bsc-private-key-here
BSC_CONTRACT_ADDRESS=0x...

# Polygon Mainnet
POLYGON_RPC_URL=https://polygon-rpc.com/
POLYGON_PRIVATE_KEY=your-polygon-private-key-here
POLYGON_CONTRACT_ADDRESS=0x...

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@cryptonestle.com
FROM_NAME=Cryptonestle

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Admin Configuration
ADMIN_EMAIL=admin@cryptonestle.com
ADMIN_PASSWORD=secure-admin-password

# Wallet Configuration
PLATFORM_WALLET_ADDRESS=0x...
PLATFORM_WALLET_PRIVATE_KEY=your-platform-wallet-private-key

# Investment Configuration
MIN_INVESTMENT_AMOUNT=0.001
MAX_INVESTMENT_AMOUNT=100
DEFAULT_INVESTMENT_FEE_PERCENT=2.5

# Notification Configuration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
